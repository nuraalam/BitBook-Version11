@model IEnumerable<WallPostByTechBrij.Models.UserProfile>
<div class="float-left" style="background-color:blanchedalmond;width: 620px">
    <table>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="/Home/UsersInfo?Id=@item.UserId"> <img src="@Url.Action("GetImage", "UserProfile", new {id = item.UserId})" width="40" /></a>
                </td>
                <td>
                    &nbsp;<a href="/Home/UsersInfo?Id=@item.UserId">@Html.DisplayFor(modelItem => item.FirstName)&nbsp; @Html.DisplayFor(modelItem => item.LastName)</a> &nbsp; &nbsp; &nbsp;
                </td>

                <td>
                    From:@Html.DisplayFor(modelItem => item.Address)&nbsp; &nbsp;
                </td>
                <td>
                    @Html.ActionLink("Delete Friend", "DeleteFriend", new { id = item.UserId })
                </td>
            </tr>

        }

    </table>  
</div>

<div class="float-right" style="background-color:blanchedalmond;width: 260px">
    <button type="button" style="background-color: goldenrod; width: 260px">Friend's Notification</button>
    <div data-bind="foreach: friendshipNotification" style="width: 260px">
        <a>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span data-bind="text:friendsNotificationbyName"></span><br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="button" value="Add Friend" data-bind="click: addFriendships">
        </a>
    </div>
    <button type="button" style="background-color: burlywood; width: 260px">Friend's Username</button>
    <div data-bind="foreach: friendships" style="width: 260px">
        <a>
            <br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <span data-bind="text:friendbyName"></span>
        </a>
    </div>
   
</div>  






    @section scripts{
        @Scripts.Render("~/bundles/jqueryval")
        <!--Reference the SignalR library. -->
        <script src="~/Scripts/jquery.signalR-1.1.2.js"></script>
        <!--Reference the autogenerated SignalR hub script. -->
        <script src="~/signalr/hubs"></script>

        <script src="~/Scripts/jquery.autosize-min.js"></script>
        <script src="~/Scripts/jquery.timeago.js"></script>
        <script src="~/Scripts/knockout-2.2.0.js"></script>
        <script src="~/App/Scripts/App.js"></script>
        <script src="~/App/Scripts/Friendship.js"></script>
    }
